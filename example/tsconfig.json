{
    "compilerOptions": {
        "strict": true,
        "target": "ES2022",
        "module": "CommonJS",
        "noImplicitAny": true,
        "moduleResolution": "Node",
        "sourceMap": true,
        "experimentalDecorators": true,
        "esModuleInterop": true,
        "pretty": true,
        "noFallthroughCasesInSwitch": true,
        "noImplicitReturns": true,
        "forceConsistentCasingInFileNames": true,
        "outDir": "dist",

        "allowArbitraryExtensions": true,
        
        "types": [
            "@types/jest",
            "node"
        ],
        "lib": [
            "es2020"
        ]
    },
    "files": [
        "src/index.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}